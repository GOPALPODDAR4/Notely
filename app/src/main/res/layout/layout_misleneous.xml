<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroung_misleneous"
    android:orientation="vertical"
    app:behavior_peekHeight="20dp"
    android:id="@+id/layout_mislinious"
    android:gravity="center_horizontal"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <View
        android:id="@+id/viewMislinious"
        android:layout_width="80dp"
        android:layout_height="10dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/bg_mislinious_item"/>

    <TextView
        android:id="@+id/textMislinious"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select note background"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/colorTextColor"
        android:fontFamily="@font/ubuntu_medium"
        android:paddingTop="20dp"
        android:paddingBottom="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/defaultColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/colorDefaultNoteColor"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_marginStart="30dp">
            <ImageView
                android:id="@+id/yellowColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/colorYellow"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_marginHorizontal="30dp"
             >
            <ImageView
                android:id="@+id/redColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/colorRed"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            >
            <ImageView
                android:id="@+id/blueColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/colorBlue"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>