<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sampleLayout"
    app:cardBackgroundColor="@color/colorDefaultNoteColor"
    app:cardElevation="0dp"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="5dp">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:id="@+id/rcvLinear"
       android:layout_marginStart="15dp"
       android:layout_marginVertical="15dp"
       android:layout_marginBottom="10dp"
       android:layout_marginEnd="5dp"
       android:background="@color/colorDefaultNoteColor">
       <TextView
           android:id="@+id/rcvTitle"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="My Note"
           android:textSize="20dp"
           android:textColor="@color/colorTextColor"
           android:fontFamily="@font/ubuntu_bold"
           />
       <TextView
           android:id="@+id/rcvTime"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="5 jan 2025"
           android:textColor="@color/colorTextColor"
           android:textSize="14dp"
           android:fontFamily="@font/ubuntu"/>
       <TextView
           android:id="@+id/rcvDescription"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:maxHeight="62dp"
           android:text="This is a sample note "
           android:textColor="@color/colorTextColor"
           android:textSize="18dp"
           android:fontFamily="@font/ubuntu_medium"
           android:layout_marginTop="7dp"
           />
   </LinearLayout>
</androidx.cardview.widget.CardView>